#!/usr/bin/env bash
# This is a script that displays numbers from 1 to 100 with some FizzBuzz

i=0

while [ $i -lt 100 ]
do
    if (( i % 3 == 0 )) && (( i % 5 == 0 ))
    then
        echo "FizzBuzz"
    elif (( i % 3 == 0 ))
    then
        echo "Fizz"
    elif (( i % 5 == 0 ))
    then
        echo "Buzz"
    else
        echo "$i"
    fi
        ((i++))
done
