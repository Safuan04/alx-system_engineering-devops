#1/usr/bin/env bash
# this is a ascript that script that displays:
# The content of the current directory
# In a list format
# Where only the part of the name after the first 
#dash is displayed (refer to the example)

for file in ./*
do
   if [ -f "$file" ]
   then
       basename "$file" | cut -d '-' -f 2
   fi
done
